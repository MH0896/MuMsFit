<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.DayNight">
      <!--  <item name="android:backgroundTint">@color/colorBackgroundNight</item>
        <item name=""-->
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
    </style>

    <style name="MyActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:itemBackground">@color/colorAccentNight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>